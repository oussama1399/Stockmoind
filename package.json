{
  "name": "stockmind",
  "version": "1.0.0",
  "description": "Smart stock management desktop application by chattypixel",
  "main": "main.js",
  "scripts": {
    "start": "npm run build:react && electron .",
    "dev": "set NODE_ENV=development && concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:react": "react-scripts start",
    "build": "react-scripts build && electron-builder",
    "build:react": "react-scripts build",
    "dist": "npm run build:react && electron-builder",
    "pack": "npm run build:react && electron-builder --dir"
  },
  "author": "chattypixel",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "ollama": "^0.5.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-scripts": "5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  },
  "homepage": "./",
  "build": {
    "extends": null,
    "appId": "com.chattypixel.stockmind",
    "productName": "Stockmind",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
